.container
  = form_with(model: @weapon) do |form|
    - if @weapon.errors.any?
      #error_explanation
        %h2= pluralize(@weapon.errors.count, "error") + " prohibited this weapon from being saved:"
        %ul
          - @weapon.errors.full_messages.each do |message|
            %li= message

    .field.mb-3
      = form.label :Nom, class: "form-label"
      = form.text_field :name, class: "form-control"

    .field.mb-3
      = form.label :Dégât, class: "form-label"
      = form.number_field :damage, class: "form-control"

    .actions
      = form.submit 'Valider', class: "btn btn-primary"

  = link_to 'Retour à la liste des armes', weapons_path, class: "btn btn-secondary"
